#!/bin/sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Run fast ESLint check (with caching)
echo "ğŸ“‹ Running ESLint (fast mode)..."
npm run lint:fast
if [ $? -ne 0 ]; then
    echo "âŒ ESLint check failed! Please fix linting errors before committing."
    echo "ğŸ’¡ Run 'npm run lint:fix' to auto-fix some issues."
    exit 1
fi

# Run TypeScript type checking
echo "ğŸ”§ Running TypeScript type checking..."
npm run typecheck
if [ $? -ne 0 ]; then
    echo "âŒ TypeScript type checking failed! Please fix type errors before committing."
    exit 1
fi

# Run Prettier check
echo "ğŸ¨ Checking code formatting..."
npm run format:check
if [ $? -ne 0 ]; then
    echo "âŒ Code formatting check failed! Run 'npm run format:write' to fix formatting."
    exit 1
fi

echo "âœ… All pre-commit checks passed!"
